
@using System.Web.Optimization
@model IEnumerable<SolarSystemWeb.Models.Entities.SpaceObjectTypeDto>

@{
    ViewBag.Title = "Админка. Типы объектов";
    Layout = "AdminLayout.cshtml";
}

@Scripts.Render("~/bundles/admin_objects")

<script>
    $().ready(
    function () {
        $('.types').addClass('active');
    });
</script>

<div id="messages" style="width: 40%;"></div>

<a href="@Url.Action("CreateObject")" class="btn btn-info">Создать</a>
<br />
<br />

<table class="table table-striped table-hover table-nonfluid" style="width: 30% !important;">
    <thead>
    <tr class="info">
        <th>Название</th>
        <th>Редактировать</th>
        <th>Удалить</th>
    </tr>
    </thead>
    <tbody>
    @{
        foreach (var item in Model)
        {
            <tr id="tr_@item.Id">
                <td>@item.Name</td>
                <td><a href="@Url.Action("ChangeObject", new {id = item.Id})">Редактировать</a></td>
                <td><a onclick="onDeleteObjectType(@item.Id, 'tr_@item.Id');return false;" href="javascript:void(0);">Удалить</a></td>
            </tr>
        }
    }
    </tbody>
</table>
    