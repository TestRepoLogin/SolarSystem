@using System.Web.Optimization
@model SolarSystemWeb.Models.ViewModels.RoleModel
@{
    ViewBag.Title = "Роли";
    Layout = "../Admin/AdminLayout.cshtml";
}

@Styles.Render("~/Styles/adminValidation")

<form class="form-horizontal" style="width: 40%;" action="@Url.Action("ChangeRole")" method="post" enctype="multipart/form-data">
    <fieldset>
        <legend>Добавление роли</legend>
        <div class="form-group">
            <label for="inputEmail" class="col-lg-2 control-label">Название</label>
            <div class="col-lg-10">
                @Html.ValidationMessageFor(m => m.Name)
                @Html.EditorFor(x => x.Name, new { htmlattributes = new { @class = "form-control", placeholder = "Название" } })
                @Html.HiddenFor(x => x.Id)
            </div>
        </div>

        <div class="form-group">
            <label for="inputEmail" class="col-lg-2 control-label">Название</label>
            <div class="col-lg-10">
                @Html.ValidationMessageFor(m => m.Description)
                @Html.TextAreaFor(model => model.Description, new { @class = "form-control", placeholder = "Описание" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="submit" class="btn btn-primary">Сохранить</button>
                <a href="@Url.Action("Index")" class="btn btn-default">Отмена</a>
            </div>
        </div>

    </fieldset>
</form>
