@using System.Web.Optimization
@{
    ViewBag.Title = "Роли";
    Layout = "../Admin/AdminLayout.cshtml";
}

@Scripts.Render("~/bundles/admin_objects")

<script>
    $().ready(
    function () {
        $('.roles').addClass('active');
    });
</script>

<h2>Роли</h2>

<a href="@Url.Action("Create")" class="btn btn-info">Создать</a>
<br />
<br />

<table class="table table-striped table-hover table-nonfluid">
    <thead>
        <tr class="info">
            <th>Название</th>
            <th>Описание</th>
            <th>Редактировать</th>
            <th>Удалить</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr id="tr_@item.Id">
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@Html.ActionLink("Редактировать", "Edit", new {id = item.Id})</td>
                <td><a onclick="onDeleteRole('@item.Id', 'tr_@item.Id');return false;" href="javascript:void(0);">Удалить</a></td>
            </tr>
        }
    </tbody>
</table>



