@model SolarSystemWeb.Models.ViewModels.LoginModel

@{
    ViewBag.Title = "Вход";
    Layout = "../Shared/_Layout.cshtml";
}

<div style="margin-left: 5%; padding-top: 5px;">
    <p>Тестовый логин: vasia, пароль: 123456 </p>
    <p>Админский логин: petia, пароль: 123456 </p>
    <form action="@Url.Action("Login")" method="POST" class="form-horizontal">
        <fieldset>
            @Html.ValidationSummary()
            @if (ViewBag.returnUrl != null)
            {
                <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl"/>
            }

            <legend>Вход на сайт</legend>
            <div class="form-group">
                <label for="inputEmail" class="col-lg-2 control-label">Email</label>
                <div class="col-lg-3">
                    @Html.EditorFor(x => x.Email, new {htmlAttributes = new {@class = "form-control", placeholder = "Email"}})
                </div>
            </div>
            <div class="form-group">
                <label for="inputPassword" class="col-lg-2 control-label">Пароль</label>
                <div class="col-lg-3">
                    @Html.EditorFor(x => x.Password, new {htmlAttributes = new {@class = "form-control", placeholder = "Пароль"}})

                </div>
            </div>

            <div class="form-group">
                <div class="col-lg-10 col-lg-offset-2">
                    <button type="submit" class="btn btn-primary">Войти</button>
                    <a href="@Url.Action("Register")" class="btn btn-default">Зарегистрироваться</a>
                </div>
            </div>
        </fieldset>
    </form>

</div>